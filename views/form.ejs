<form method="post" action="/insertData" enctype="multipart/form-data">
    <input type="hidden" name="editid" value="<%= single.id %>"/>
    <table border="10" style="margin: auto; border-color: cornflowerblue;">
        <tr>
            <td style="padding: 10px;">Movie-Name</td>
            <td style="padding: 10px;"><input type="text" value="<%= single.name %>" name="name"></td>
        </tr>
        <tr>
            <td style="padding: 10px;">Director</td>
            <td style="padding: 10px;"><input type="text"  value="<%= single.director %>" name="director"></td>
        </tr>
        <tr>
            <td style="padding: 10px;">Writer</td>
            <td style="padding: 10px;"><input type="text"  value="<%= single.writer %>" name="writer"></td>
        </tr>
        <tr>
            <td style="padding: 10px;">Actors</td>
            <td style="padding: 10px;"><input type="text"  value="<%= single.actors %>" name="actors"></td>
        </tr>
        <tr>
            <td style="padding: 10px;">Language</td>
            <td style="padding: 10px;">
                <input type="radio" <% if(single.language == "hindi") { %> checked <% } %> value="hindi" name="language">Hindi
                <input type="radio" <% if(single.language == "english") { %> checked <% } %> value="english"  name="language">English
                <input type="radio" <% if(single.language == "gujrati") { %> checked <% } %> value="gujrati" name="language">Gujrati
            </td>
        </tr>
        <tr>
            <td style="padding: 10px;">Country</td>
            <td style="padding: 10px;"><input type="text"  value="<%= single.country %>" name="country"></td>
        </tr>
        <tr>
            <td style="padding: 10px;">Type</td>
            <td style="padding: 10px;">
                <select name="type">
                    <option value="">---select Type---</option>

                    <%
                        let type = ["action","drama","thriller"]; 
                        for(let i in type) {
                    %>
                        <option <% if(single.type == type[i]) { %> selected <% } %> value="<%= type[i] %>"><%= type[i] %></option>
                    <% } %>
                </select>
            </td>
        </tr>
        <tr>
            <td style="padding: 10px;">File Upload</td>
            <td style="padding: 10px;">
                <input type="file" name="avatar">
                <% if(single) { %>
                        <img src="<%= single.avatar %>" width="100"/>
                <% } %>
                
            </td>
        </tr>
        <tr>
            <td></td>
            <td style="padding: 10px;"> 
                <% if(!single) { %>
                    <input type="submit">
                <% } else { %>
                    <input type="submit" value="Edit">
                <% } %>
            </td>
        </tr>
    </table>
</form><br><br>



<table border="1" style="margin: auto;border-color: cornflowerblue;">
    <tr>
        <td style="padding: 10px;">Id</td>
        <td style="padding: 10px;">Movie-Name</td>
        <td style="padding: 10px;">Director</td>
        <td style="padding: 10px;">Writer</td>
        <td style="padding: 10px;">Actors</td>
        <td style="padding: 10px;">Language</td>
        <td style="padding: 10px;">Country</td>
        <td style="padding: 10px;">Type</td>
        <td style="padding: 10px;">Image</td>
        <td style="padding: 10px;">Action</td>
    </tr>
   
    <% user.map((val,i)=>{ 
            const {id,name,director,writer,actors,language,country,type,avatar} = val;
            i++;
        %>
        <tr>
            <td style="padding: 10px;"><%= i %></td>
            <td style="padding: 10px;"><%= name %></td>
            <td style="padding: 10px;"><%= director %></td>
            <td style="padding: 10px;"><%= writer %></td>
            <td style="padding: 10px;"><%= actors %></td>
            <td style="padding: 10px;"><%= language %></td>
            <td style="padding: 10px;"><%= country %></td>
            <td style="padding: 10px;"><%= type %></td>
            <td style="padding: 10px;">
                <img src="<%= avatar  %>" width="100"/>
            </td>
            <td>
                <a href="/deleteData?id=<%= id %>">Delete</a> ||
                <a href="/editData?id=<%= id %>">Edit</a>
            </td>
        </tr>
    <% }) %>
</table>